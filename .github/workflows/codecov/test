jobs:
  test:
    name: Run tests
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Setup Dart
      uses: subosito/dart-setup-action@v1
      with:
        sdk: 'stable'
    - name: Get packages
      run: flutter pub get
    - name: Run tests
      run: flutter test
